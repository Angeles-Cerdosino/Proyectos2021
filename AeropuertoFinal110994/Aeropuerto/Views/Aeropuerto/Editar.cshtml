
@{
    ViewBag.Title = "Editar";
}

@model Aeropuerto.Models.VMVuelos

<h2 class="text-center">Editar Vuelos</h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.VuelosModel.IdVuelos)
            <div class="form-group">
                <label> Observaciones: </label>
                @Html.TextBoxFor(model => model.VuelosModel.Observaciones, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.DropDownListFor(model => model.VuelosModel.IdDestino, new SelectList(Model.Destinos, "IdDestino", "Nombre"), "Seleccione Destino: ", htmlAttributes: new { @class = "form-control" })
                
            </div>

            <div class="form-group">
                @Html.TextBoxFor(model => model.VuelosModel.Tipo, htmlAttributes: new { @class = "form-control", @id = "txttipo", @type = "number" })
                
            </div>

            <div class="form-group">
                <label> Fecha </label>
                @Html.TextBoxFor(model => model.VuelosModel.Precio, htmlAttributes: new { @class = "form-control", @id = "txtprecio", @type = "number" })
            </div>

            <div class="form-group">
                <label> Precio </label>
                @Html.TextBoxFor(model => model.VuelosModel.Fecha, htmlAttributes: new { @class = "form-control", @id = "txtfecha", @type = "date" })
            </div>
            <button class="btn btn-info" type="submit" onclick="validar()">
                <span class="glyphicon glyphicon-send "> </span>  Aceptar !
            </button>
        }
    </div>
    <div class="col-md-2"></div>
</div>


